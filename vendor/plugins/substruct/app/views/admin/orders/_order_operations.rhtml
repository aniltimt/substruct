<h2>Order Menu</h2>
<ul>
<% if (!order.is_editable? && order.order_status_code_id != 9) then %>
	<li><%= link_to 'Mark This Order Returned', {:action => 'return_order', :id => order}, :confirm => 'Are you sure you want to mark this order returned?' %></li>
<% end %>
<% if order.is_complete? %>
  <li><%= link_to(
    'View Receipt', 
    {:action => 'show_receipt', :id => order}, 
    :target => '_blank'
    ) 
  %></li>
	<li><%= link_to(
	  'Re-Send Order Receipt', 
	  {:action => 'resend_receipt', :id => order}
	  ) 
	%></li>
<% end %>
</ul>
