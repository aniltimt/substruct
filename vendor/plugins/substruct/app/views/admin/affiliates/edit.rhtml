<div id="left">
  <%= render :partial => 'subnav' %>

	<% form_tag(:action => 'update', :id => @affiliate) do %>
		<%= render(:partial => 'form') %>
		<div class="line">&nbsp;</div>

		<div style="float:right;">
			<%= link_to 'Delete This Affiliate', {:action => 'destroy', :id => @affiliate.id}, :class => 'action', :confirm => 'Are you sure?', :method => :post %>
		</div>
		<p>
			<%= submit_tag "Save This Affiliate", :class => 'button hundred' %>
		</p>
	<% end %>
</div>

<div id="right">
  <h1 class="first">Link</h1>
  <p>
    You should give this link to your affiliate. They will use it to promote your site and drive sales.
  </p>
  <p>
    <input type="text" value="<%= get_affiliate_link(@affiliate) %>" class="textInput" size="25" id="affiliate_link_text" />
    <script language="javascript">
      $('affiliate_link_text').focus();
    </script>
  </p>
</div>
<div class="clear">&nbsp</div>