<h1>
  <a href="/admin/affiliates/list/">Affiliate List</a> &gt;
  <%= @affiliate.name %>
</h1>

<div id="subnav">
	<ul class="navigation tertiary" id="sub_tabs">
    <li class="<%= @aname == 'edit' ? 'active' : '' %>">
      <%= 
        link_to(
          'Edit',
          :action => 'edit',
          :id => @affiliate.id
        )
      %>
    </li>
    <li class="<%= (@aname == 'earnings' || @aname == 'orders') ? 'active' : '' %>">
      <%= 
        link_to(
          'Earnings',
          :action => 'earnings',
          :id => @affiliate.id
        )
      %>
    </li>
    <li class="<%= (@aname == 'payments_for_affiliate' || @aname == 'show_payment') ? 'active' : '' %>">
      <%= 
        link_to(
          'Payments',
          :action => 'payments_for_affiliate',
          :id => @affiliate.id
        )
      %>
    </li>
	</ul>
	<div class="clear">&nbsp;</div>
</div>
<div class="clear" style="margin-bottom:10px;">&nbsp;</div>